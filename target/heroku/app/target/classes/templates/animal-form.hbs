{{#partial "content"}}
    <div class="container">
        <h5>Add Animal Your Animal</h5>
        <div class="custom-card" >
            <div class="card-body custom-cards">
                    <form action="/animal/new" method="post">
                        <div class="form-group ">
                            <label for="name">Select Animal</label>
                            <input type="text" required class="form-control" name="name" id="name" placeholder="name">
                            <input type="checkbox"  name="endangered" value="yes">
                            <label for="endangered">Endangered</label>
                        </div>
                        <br>

                        <h5>Add Additional Details if the animal is Endangered:</h5>
                        <div class="form-group reveal-if-active">
                            <label for="health">Health Condition</label>
                            <select class="form-control" name="health">
                                <option>{{HEALTH_HEALTHY}}</option>
                                <option>{{HEALTH_OK}}</option>
                                <option>{{HEALTH_ILL}}</option>
                            </select>
                        </div>
                        <div class="form-group reveal-if-active">
                            <label for="age">Animal Age</label>
                            <select class="form-control" name="age">
                                <option>{{AGE_BABY}}</option>
                                <option>{{AGE_YOUNG}}</option>
                                <option>{{AGE_ADULT}}</option>
                            </select>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-dark">Add Animal</button>
                    </form>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}

































